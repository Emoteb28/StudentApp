{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ student.surname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ student.gender }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ student.birthdate ? student.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ student.matricule }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ student.nationality }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ student.address }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ student.telephone }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Profile</th>
                <td>{{ student.profile }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('student_index') }}" role="button">back to list</a>
    <a class="btn btn-primary" href="{{ path('student_edit', {'id': student.id}) }}" role="button">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
